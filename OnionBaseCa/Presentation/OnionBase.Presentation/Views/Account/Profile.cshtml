@using Microsoft.AspNetCore.Identity;
@using OnionBase.Domain.Entities.Identity;
@using OnionBase.Presentation.ViewModels;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Profil";
}
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@model ProfileViewModel
<section>
    <div class="row" style="margin-top:50px">
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    @if (@Model.ProfileImage == null)
                    {
                        <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                    }
                    @if (@Model.ProfileImage != null)
                    {
                    <img src="data:image/jpeg;base64,@Model.ProfileImage" alt="avatar"
                         class="rounded-circle img-fluid" style="width: 150px;">
                    }
                    
                    <h5 class="my-3">@User.Identity.Name</h5>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Admin", "AllProducts")"><button class="btn btn-link px-3 me-2">Admin</button></a>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">İsim</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">
                                @Model.Name
                            </p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Email</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Email</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Telefon Numarası</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.PhoneNumber</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                        </div>
                        <div class="col-sm-9">
                            <a href="@Url.Action("ProfileUpdate", "Account")">Güncelle</a>
                        </div>
                    </div>
                    <hr>
                </div>

            </div>
        </div>
    </div>
    </div>
</section>