@using OnionBase.Presentation.ViewModels;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model LoginViewModel
@{
    Layout = "_layoutWithoutNavbar";
}
<style>
    .gradient-custom {
        /* fallback for old browsers */
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(to right, #ffe4c4, white, #ffe4c4));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(to right, #ffe4c4, white, #ffe4c4))
    }

    .container {
        margin: 0px;
        margin-right: 0px;
    }

</style>
<section class="vh-100 gradient-custom" style="background-image: url(/img/kesik-logo.png); background-repeat: no-repeat;background-attachment: fixed;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100" style="justify-content: right !important; ">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">
                            <form asp-action="Login" asp-controller="Account" method="post">
                                <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                                <p class="text-white-50 mb-5">Please enter your login and password!</p>

                                <div class="form-outline form-white mb-4">
                                    <input type="email" id="typeEmailX" class="form-control form-control-lg" asp-for="Email" placeholder="E-mail adresi" required/>
                                    <label class="form-label" for="typeEmailX" id="name">Email</label>
                                </div>

                                <div class="form-outline form-white mb-4">
                                    <input type="password" id="typePasswordX" class="form-control form-control-lg" asp-for="Password" required/>
                                    <label class="form-label" for="typePasswordX">Şifre</label>
                                </div>

                                <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Şifremi Unuttum</a></p>

                                <input type="submit" value="GİRİŞ YAP" id="myForm"/>
                                @if(TempData["SuccessLogin"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <br>
                                        @TempData["SuccessLogin"]
                                    </div>
                                }
                                @if (TempData["ErrorLogin"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        <br>
                                        @TempData["ErrorLogin"]
                                    </div>
                                }
                                

                                <div class="d-flex justify-content-center text-center mt-4 pt-1">
                                    <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                    <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                    <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                                </div>
                            </form>
                        </div>


                        <div>
                            <p class="mb-0">
                                Henüz hesabınız yok mu? <a href="@Url.Action("Register", "Account")" class="text-white-50 fw-bold">Kayıt Ol</a>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    
    document.getElementById("myForm").addEventListener("submit", function (event) {
        var nameInput = document.getElementById("name");
        if (nameInput.value === "") {
            alert("İsim alanı boş bırakılamaz!");
            event.preventDefault(); // Formun gönderilmesini engelle
        }
    });</script>