@using OnionBase.Presentation.DTOs;
@using OnionBase.Presentation.ViewModels;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model CombinedModelsForOrder

<head>
    <style>
        .column {
            float: left;
            width: 50%;
            padding: 10px;
            box-sizing: border-box;
        }
        /* Clearfix (clear floats) */
        .row::after {
            content: "";
            clear: both;
            display: table;
        }
    </style>
</head>
<body>


    <div class="row">
        <div class="column">
            <h2>Address Form</h2>
            <form asp-action="OrderOrQuestion" asp-controller="AllProducts" method="post">
                <div class="form-outline mb-4">
                    <input type="text" id="form3Example1cg" class="form-control form-control-lg" asp-for="Model1.Address" />
                    <span asp-validation-for="Model1.Address"></span>
                    <label class="form-label" for="form3Example1cg">Adresiniz</label>
                </div>
                <div class="form-outline mb-4">
                    <input type="text" id="form3Example1cg" class="form-control form-control-lg" asp-for="Model1.City" />
                    <span asp-validation-for="Model1.City"></span>
                    <label class="form-label" for="form3Example1cg">Şehir</label>
                </div>
                <div class="form-outline mb-4">
                    <input type="text" id="form3Example1cg" class="form-control form-control-lg" asp-for="Model1.Phone" />
                    <span asp-validation-for="Model1.Phone"></span>
                    <label class="form-label" for="form3Example1cg">Telefon Numarası</label>
                </div>
                <div class="form-outline mb-4">
                    <input type="text" id="form3Example1cg" class="form-control form-control-lg" placeholder="Varsa kampanya kodunuzu girin." asp-for="Model1.CampaignCode" />
                    <span asp-validation-for="Model1.CampaignCode"></span>
                    <label class="form-label" asp-for="Model1.CampaignCode" for="form3Example1cg">Kampanya Kodu</label>
                </div>
                <div class="form-outline mb-4">
                    <input type="hidden" class="form-control form-control-lg" asp-for="price" value="@Model.price" />
                    <span asp-validation-for="price"></span>
                    <label class="form-label" asp-for="Model1.CampaignCode" for="form3Example1cg"></label>
                </div>
                <div class="form-outline mb-4">
                    <input type="hidden" class="form-control form-control-lg" asp-for="AdditionalFeature" />
                    <span asp-validation-for="AdditionalFeature"></span>
                    <label class="form-label" asp-for="Model1.AdditionalFeature"></label>
                </div>
                
                <button type="submit"
                        class="btn btn-success btn-block btn-lg gradient-custom-4 text-body" style="background-color:#57081a">
                    <font style="color:white">Sipariş Oluştur</font>
                </button>
            </form>
        </div>
    </div>

</body>